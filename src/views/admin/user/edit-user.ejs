<%- include('../header') %>

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg></a></li>
            <li><a href="">Quản lý thành viên</a></li>
            <li class="active"><%= data.user.username %> </li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Thành viên: <%= data.user.username %></h1>
        </div>
    </div>
    <!--/.row-->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <% if(errors != null){ %>
                    <% errors.forEach(element => { %>
                    <div class="alert alert-danger"><%- element %> </div>
                    <%   }); %>
                    <%  %>
                    <% } %>
                    <div class="col-md-8">

                        <form role="form" method="post" action="/user/edit-user/<%= data.user._id %> ">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="text" name="email" value="<%= data.user.local.email %>"
                                    class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu cũ</label>
                                <input type="password" name="current_password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu mới</label>
                                <input type="password" name="password" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Nhập lại mật khẩu mới</label>
                                <input type="password" name="re_password" class="form-control">
                            </div>

                            <button type="submit" name="sbm" class="btn btn-primary">Cập nhật</button>
                            <button type="reset" class="btn btn-default">Làm mới</button>
                    </div>
                    </form>
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->

</div>
<!--/.main-->
<%- include('../footer') %>