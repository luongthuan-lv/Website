<%- include('../header') %>
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="#"><svg class="glyph stroked home">
                        <use xlink:href="#stroked-home"></use>
                    </svg></a></li>
            <li class="active">Danh sách phản hồi </li>
        </ol>
    </div>
    <!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Danh sách phản hồi</h1>
        </div>
    </div>
    <!--/.row-->
    <div id="toolbar" class="btn-group">
        <a href="/report/add" class="btn btn-success">
            <i class="glyphicon glyphicon-plus"></i> Thêm phản hồi
        </a>
    </div>
    <br><br>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <% if(success != null){ %>
                    <% success.forEach(element => { %>
                    <div class="alert alert-success"><%= element %> </div>
                    <%   }); %>
                    <%  %>
                    <% } %>
                    <table class="table" data-toolbar="#toolbar" data-toggle="table">

                        <thead>
                            <tr>
                                <th data-field="id" data-sortable="true" style="text-align: center">ID</th>
                                <th data-field="name" data-sortable="true" style="text-align: center">User</th>
                                <th data-field="name" data-sortable="true" style="text-align: center">Username</th>
                                <th data-field="name" data-sortable="true" style="text-align: center">Star</th>
                                <th data-field="name" data-sortable="true" style="text-align: center">Avatar</th>
                                <th data-field="name" data-sortable="true" style="text-align: center">Report</th>
                                <th data-field="name" data-sortable="true" style="text-align: center">Date</th>
                                <th data-field="name" data-sortable="true" style="text-align: center">Tuyến xe</th>
                                <th style="text-align: center">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% report.forEach(item => { %>
                                <tr>
                                    <td style="text-align: center"><%=item._id %> </td>
                              
                                    <td style="text-align: center"><%=item.user  %> </td>
                                    <td style="text-align: center"><%=item.username  %> </td>
                                    <td style="text-align: center"><%=item.star  %> </td>
                                    <td style="text-align: center">
                                        <img src="<%=item.avatar%>" alt="" height="100" width="100">
                                    </td>
                                    <td style="text-align: center"><%=item.report  %> </td>
                                    <td style="text-align: center"><%=item.date  %> </td>
                                    <% item.vehicles.forEach(i => { %>
                                        <td style="text-align: center"><%=i.vehicle_name  %> </td>
                                    <% }) %> 
                    
                                  
                                    <td class="form-group" style="text-align: center">
                                      
                                        <a href="/report/remove/<%=item._id %>" class="btn btn-danger"
                                            onclick="return alert('Bạn có muốn xóa không!')"><i
                                                class="glyphicon glyphicon-remove"></i></a>
                                    </td>
                                </tr>
                                <% })%>
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!--/.row-->
</div>
<!--/.main-->
<%- include('../footer') %>