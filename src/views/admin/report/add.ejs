    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="col-md-8">
                        <% if(errors != null){ %>
                            <% errors.forEach(element => { %>
                                <div class="alert alert-danger"><%= element %> </div>
                            <% }); %>
                            <%    %>
                        <% } %>
                        <form role="form" method="post" enctype="multipart/form-data" action="/report/add/post">
                            <div class="form-group">
                                <label>Vehicle:</label>
                                <select name="vehicle_id" id="" class="form-control">
                                    <% Vehicle.forEach(item => { %>
                                            <option value="<%=item._id %>"><%=item.vehicle_name %> </option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>User:</label>
                                <input type="text" name="user" class="form-control"  placeholder="Tên danh mục...">
                            </div>
                            <div class="form-group">
                                <label>Username:</label>
                                <input type="text" name="username" class="form-control"  placeholder="Tên danh mục...">
                            </div>
                            <div class="form-group">
                                <label>Star:</label>
                                <input type="text" name="star" class="form-control"  placeholder="Tên danh mục...">
                            </div>
                            <div class="form-group">
                                <label>Report:</label>
                                <input type="text" name="report" class="form-control" placeholder="Tên lộ trình...">
                            </div>
                         
                          
